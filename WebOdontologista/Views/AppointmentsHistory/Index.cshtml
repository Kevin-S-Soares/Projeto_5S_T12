@{
    ViewData["Title"] = "Histórico de Consultas";
}

<h2>@ViewData["Title"]</h2>
<br>
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Busca Simples <span class="glyphicon glyphicon-question-sign text-info" style="font-size:16px" title="Busca todas as consultas em dado período.
Se não for dado período, buscará todas as consultas deste ano."></span></legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Início</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Fim</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-info">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Busca Agrupada <span class="glyphicon glyphicon-question-sign text-info" style="font-size:16px" title="Busca todas as consultas em dado período e agrupa o resultado em odontologistas.
Se não for dado período, buscará todas as consultas deste ano."></span></legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Inicio</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Fim</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-info">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>