@model IEnumerable<Appointment>
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title" style="color:black">Número de consultas: @Model.Count()</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="info">
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DurationInMinutes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AppointmentType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dentist.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Patient)
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.DateAndTime().ToString("dd/MM/yy HH:mm")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DurationInMinutes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dentist.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>