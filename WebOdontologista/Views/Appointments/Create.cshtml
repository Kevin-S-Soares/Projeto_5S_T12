@model WebOdontologista.Models.Appointment
@{
    ViewData["Title"] = "Nova Consulta";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Patient" class="control-label"> </label>
                <input asp-for="Patient" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AppointmentType" class="control-label"> </label>
                <input asp-for="AppointmentType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"> </label>
                <input type="date" asp-for="Date" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar Nova Consulta" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


