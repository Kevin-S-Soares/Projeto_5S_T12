@model WebOdontologista.Models.Appointment

@{
    ViewData["Title"] = "Cancelar Consulta";
}

<h2>@ViewData["Title"] </h2>
<h3>Tem certeza que deseja cancelar a consulta?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Patient)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TelephoneNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TelephoneNumber)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Dentist.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Dentist.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AppointmentType)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AppointmentType)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DurationInMinutes)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DurationInMinutes)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Date) e horário
        </dt>
        <dd class="col-sm-9">
            @Model.DateAndTime().ToString("dd/MM/yy HH:mm")
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Cancelar" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-default">Voltar ao índice</a>
    </form>
</div>