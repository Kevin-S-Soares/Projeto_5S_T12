@model WebOdontologista.Models.ViewModels.IndexAppointmentFormViewModel
@{
    ViewData["Title"] = "Consultas";

}


<h2>@ViewData["Title"]</h2>

<div>
    <div class="col-sm-9">
        <a asp-action="Create" class="btn btn-default" style="margin-left:-14px">Nova Consulta</a>
    </div>
    <div class="col-sm-1" style="margin-top: 5px; padding-right: 10px; text-align: right">
        <strong>Exibir:</strong>
    </div>
    <form class="col-sm-2">
        <div class="form-group">
            <select id="show" asp-for="Show" class="form-control" onchange="reload()">
                <option value="1">Apenas hoje</option>
                <option value="2">Apenas semana</option>
                <option value="3">Apenas mês</option>
                <option value="4">Tudo</option>
            </select>
        </div>
    </form>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Appointment.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment.DurationInMinutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment.Dentist.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment.AppointmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment.TelephoneNumber)
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Appointments)
        {
            <tr>
                <td>
                    @item.DateAndTime().ToString("dd/MM/yy HH:mm")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DurationInMinutes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dentist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelephoneNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Reagendar</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default">Cancelar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    @{ 
        await Html.RenderPartialAsync("_ReloadIndex");
    }
}