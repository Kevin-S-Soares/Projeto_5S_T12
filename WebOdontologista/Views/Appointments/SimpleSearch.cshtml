@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Busca Simples";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Inicio</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Fim</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-default">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading" style="background: #dff0d8">
        <h3 class="panel-title" style="color:black">Número de consultas: @Model.Count()</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DurationInMinutes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AppointmentType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dentist.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DurationInMinutes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dentist.Name)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>